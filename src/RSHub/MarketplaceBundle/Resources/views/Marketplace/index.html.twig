{% extends 'RSHubMarketplaceBundle::layout.html.twig' %} {% block
sidebar %}
<ul class="tags">
<li><a href="{{ path('rs_hub_marketplace_homepage') }}" class="tag alltag"><h6>All</h6></a></li>
	<ul>
	{% for c in categories %}
	<li><a href="{{ path('rs_hub_marketplace_tag', {'tag': c.name })}}" class="tag{% if tag != '' and tag != 'all' and tag.id == c.id %} crt_tag {% endif %}">{{ c.name }}</a></li> {% else %}
	<li>No category yet !</li> {% endfor %}
</ul>
<li><h6> Sort by</li>
<ul>
	<li><a href="{{ path('rs_hub_marketplace_tag', {'tag': tagname, 'sort': 'popularity' }) }}">Popularity</a></li>
	<li><a href="{{ path('rs_hub_marketplace_tag', {'tag': tagname, 'sort': 'downloads'  }) }}">Downloads</a></li>
	<li><a href="{{ path('rs_hub_marketplace_tag', {'tag': tagname, 'sort': 'name'       }) }}">Name</a></li>
<li><a href="{{ path('rs_hub_marketplace_tag', {'tag': tagname, 'sort': 'newest'     }) }}" >Newest</a></li>
	
	</ul>
</ul>
{% endblock %}
{% block content %}
<ul class="item_list">
	{% for item in mods %}
	<li class="item">
		<table>
			<tr>
				<td rowspan="3" class="mod_icon"><img class="mod_icon" alt="icon" src="{{ item.icon }}"></td>
				<td colspan="2"><h3><span class="mtitle">{{ item.name }}</span> <span class="mversion"> v{{ item.version }}</span> <span class="mauthor"> by {{ item.author }}</span></h3></td>
			</tr>
			<tr>
				<td class="sum">{{ item.summary }}</td>
				<td class="download" rowspan="2"><a href="#" class="download">
				<span class="icn">&</span>
				<span>Download</span>
				<span class="dlcount">{{ item.downloads|number_format }}</span></td>
			</tr>
			<tr>
				<td>
					<ul class="mod_links">
						<li>
							<a href="{{ path('rs_hub_marketplace_view', {'id': item.id}) }}">more</a>
						</li>
						<li>
							<a href="">online demo</a>
							<li>
								<a href="" class="star"><span class="icn">s</span>{{ item.stars|number_format }}</a>
							</li>
						</li>
					</ul>
				</td>
			</tr>
		</table></li> {% else %}
		<li>There is no mods yet</li> {% endfor %}
	</ul> {% endblock %}
